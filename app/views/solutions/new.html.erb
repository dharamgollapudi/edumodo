<h1><%= @homework.title %></h1>

<%= form_for([@homework, @solution], html: {class: ''}) do |f| %>
  <% if @solution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

      <ul>
      <% @solution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :question, 'Question:', class: 'control-label col-sm-1' %>
    <div class="col-sm-11">  
      <%= @homework.question %>
    </div>  
  </div>

  <div class="form-group">
    <%= f.label :answer, 'My Answer:', class: 'control-label col-sm-12' %><br />
    <%= f.text_area :answer, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group actions" style="text-align:right;">
		<%= f.submit 'Save', class: 'btn btn-primary' %>     
  </div>
<% end %>

